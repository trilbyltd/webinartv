<h1>Listing Attendees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Active user</th>
      <th>School name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @attendees.each do |attendee| %>
      <tr>
        <td><%= link_to attendee.name, attendee  %></td>
        <td><%= attendee.email %></td>
        <td><%= attendee.active_user %></td>
        <td><%= attendee.school_name %></td>
        <td><%= link_to t('.destroy'), attendee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
