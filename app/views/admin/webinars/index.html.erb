<p id="notice"><%= notice %></p>

<h1>Listing Webinars</h1>

<table>
  <thead>
    <tr>
      <th>Live date</th>
      <th>Title</th>
      <th>Description</th>
      <th>Presenter</th>
      <th>Active</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @webinars.each do |webinar| %>
      <tr>
        <td><%=t(".columns.date", date: l(webinar.live_date, format: :default)) %></td>
        <td><%= webinar.title %></td>
        <td><%= webinar.description %></td>
        <td><%= Presenter.find(webinar).name if webinar.presenter_id.present? %></td>
        <td><%= webinar.active %></td>
        <td><%= button_to 'Show', admin_webinar_path(webinar) %></td>
        <td><%= button_to 'Edit', edit_admin_webinar_path(webinar) %></td>
        <td><%= button_to 'Destroy', [:admin, webinar], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "View Page", webinar_path(webinar) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

