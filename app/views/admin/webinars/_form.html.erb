<%= simple_form_for([:admin, @webinar]) do |f| %>
  <%= f.error_notification %>

  <div class="form-input">
    <%= f.input :title, placeholder: "Enter a name for the webinar" %>
    <%= f.input :description, input_html: {rows: 5} %>
    <%= f.input :live_date, as: :datetime_picker, placeholder: "dd/mm/yyyy HH:mm" %>
      <%= f.input :presenter_id, collection: Presenter.all %>
    <%= f.input :webinar_url, label: "Webinar URL", placeholder: "Enter the Google Hangout address" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.submit') %>
  </div>
<% end %>
