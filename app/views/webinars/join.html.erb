<h1>Join</h1>
<p>
  <strong>Live date:</strong>
  <%= @webinar.live_date %>
</p>

<p>
  <strong>Title:</strong>
  <%= @webinar.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @webinar.description.html_safe %>
</p>

<p>
  <strong>Presented by </strong><%= @webinar.presenter.name if @webinar.presenter_id?%>
</p>

<section class="join">
<%= simple_form_for @attendee do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :school_name %>
    <%= f.input :active_user, label: false, inline_label: t(".active_user") %>
    <%= f.fields_for :webinar_attendees_attributes do |w| %>
      <%= w.hidden_field :webinar_id, value: @webinar.id %>    
    <% end %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, t("webinars.join.submit") %>
  </div>
<% end %>
</section>
<%= link_to 'Back to list', webinars_path %>
