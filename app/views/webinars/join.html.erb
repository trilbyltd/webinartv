<h1>Register for Webinar</h1>
<p>If you'd like to register for this webinar, please enter your details below.</p>
<p>
  <strong>Live date:</strong>
  <%= l(@webinar.live_date, format: :default) %>
</p>

<p>
  <strong>Title:</strong>
  <%= @webinar.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @webinar.description.html_safe %>
</p>

<p>
  <strong>Presented by </strong><%= @webinar.presenter.name %>
</p>

<section class="join">
<%= simple_form_for @attendee do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :school_name %>
    <%= f.input :active_user, label: false, inline_label: t(".active_user") %>
    <%= f.fields_for :webinar_attendees_attributes do |w| %>
      <%= w.hidden_field :webinar_id, value: @webinar.id %>    
    <% end %>
  </div>
  <div class="form-actions">
    <p><%= f.button :submit, t("webinars.join") %></p>
  </div>
<% end %>
<p><%= link_to 'Back to list', webinars_path %></p>
</section>
